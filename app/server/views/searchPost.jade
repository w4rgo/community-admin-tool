extends layout
block content
	#account-form-container
		form( method="post")#search-form.well.span4
			h2 Buscar Post 
			label#isAuthorSearch.checkbox Buscar por autor
				input(type="checkbox",name='isAuthorSearch')
			label#isTagSearch.checkbox Buscar por titulo
				input(type="checkbox",name='isTagSearch') 
			label#isTitleSearch.checkbox Buscar por titulo
				input(type="checkbox",name='isTitleSearch')                
			#search-cg.control-group
				label.control-label(for='searchField') Palabras Clave:
				.controls
					input(type="text", name="searchField", id='searchField').span4.required
			button(type="submit")#btn-searchByAuthor.btn.btn-success
				i.icon-search.icon-pencil
				| Buscar
			button(type="button")#btn-cancel.btn.btn-danger			
				i.icon-pencil.icon-pencil
				|Volver
			hr      
			
	include navBar
	include modals/alert
	include modals/form-errors

    
block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/controllers/navBarController.js')
	script(src='/js/views/navBar.js')
	script(src='/js/views/search.js')
	script(src='/js/form-validators/postValidator.js')
	script(src='/js/controllers/searchController.js')


